<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/message_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp">
        <FrameLayout
            android:id="@+id/fram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:layout_marginEnd="4dp"
            >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textSize="18sp"
                tools:text="asdlhskldhgksdhgkjshdkgjhdskjhgkjsdkgjhdskjg"
                android:visibility="gone"
                />
            <VideoView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/sample_profile"
                android:adjustViewBounds="true"
                android:layout_margin="6dp"
                android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/audio"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:splitTrack="false"
                    android:layout_marginStart="70dp"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/play_img"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/play_ic"/>

                <TextView
                    android:id="@+id/currenttime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/play_img"
                    android:layout_alignBottom="@id/play_img"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    tools:text="02:12"/>
                <TextView
                    android:id="@+id/endtime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/seekbar"
                    android:layout_alignBottom="@id/play_img"
                    android:layout_marginStart="4dp"
                    tools:text="02:12"/>
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@id/fram"
            android:layout_alignEnd="@id/fram"
            tools:text = "11:12"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>

</RelativeLayout>